= form_for(@user) do |f|
  - if @user.errors.any?
    %div#error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |message|
          %li = message

  %div.field
    = f.label "Vorname"
    = f.text_field :first_name

  %div.field
    = f.label "Nachname"
    = f.text_field :last_name
  %div.field
    = f.label "Administrator?"
    = f.check_box :admin
  %div.field
    = f.label "Gruppe"
    = f.collection_select :group_id, Group.order(:name), :id, :name, include_blank: true
  %div.actions
    = f.submit "Erstelle Nutzer"