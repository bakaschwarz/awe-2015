= form_for(@sensor) do |f|
  %table.table.table-striped.table-bordered
    %tr
      .field 
        %td= f.label :label
        %td= f.text_field :label, class: 'form-control'
    %tr
      .field
        %td= f.label :unit
        %td= f.text_field :unit, class: 'form-control'
    %tr
      .field
        %td= f.label :sensor
        %td= f.text_field :sensor, class: 'form-control'
    %tr
      .field
        %td= f.label :visualization_type_id
        %td= f.collection_select(:visualization_type_id, VisualizationType.order(:name),:id,:name, {}, {class: 'form-control'})
    %tr
      .field
        %td= f.label :abbreviation
        %td= f.text_field :abbreviation, class: 'form-control'
    %tr
      .field
        %td= f.label :station_id
        %td= f.collection_select :station_id, Station.order(:label),:id,:label,{}, {class: "form-control"}
    %tr
      .field
        %td= f.label :active
        %td= f.check_box :active
    %tr
      .actions
      %td
        = f.submit class: "btn btn-default"
      %td
%a.btn.btn-primary{href: static_pages_wetter_config_url} Back to sensor configuration